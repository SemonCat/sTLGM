<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/bkg_m21_left"
        android:alpha="0" />
    <ImageView
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/bkg_m21_right" 
        android:alpha="0"/>
    <ImageView
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/bkg_m21_center" 
        android:alpha="0"/>
    <ImageView
        android:id="@+id/under"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/bkg_m21_under" 
        android:alpha="0"/>

   <ImageView
       android:id="@+id/words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/bkg_m21_words"
        android:alpha="0" />
    
    <FrameLayout
        android:id="@+id/A"
        android:layout_width="80px"
        android:layout_height="400px"
        android:layout_alignBottom="@+id/G"
        android:layout_toRightOf="@+id/G"
        android:layout_marginLeft="350px"
        android:background="@drawable/btn_m_puzzlefrag11"
        android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/B"
        android:layout_width="80px"
        android:layout_height="400px"
        android:layout_alignBottom="@+id/G"
        android:layout_toLeftOf="@+id/G"
        android:layout_marginRight="350px"
        android:background="@drawable/btn_m_puzzlefrag11"
        android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
    </FrameLayout>

   <FrameLayout
       android:id="@+id/G"
       android:layout_width="150px"
       android:layout_height="70px"
  	   android:layout_centerHorizontal="true"
  	   android:layout_marginTop="490px"
        android:background="@drawable/btn_m_puzzlefrag11"
       android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
   </FrameLayout>

   <FrameLayout
       android:id="@+id/F"
       android:layout_width="150px"
       android:layout_height="70px"
       android:layout_alignRight="@+id/G"
       android:layout_alignBottom="@+id/G"
       android:layout_marginBottom="150px"
       android:layout_marginRight="80px"
        android:background="@drawable/btn_m_puzzlefrag11"
       android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
   </FrameLayout>

   <FrameLayout
       android:id="@+id/C"
       android:layout_width="150px"
       android:layout_height="70px"
       android:layout_alignBottom="@+id/G"
       android:layout_alignRight="@+id/G"
       android:layout_marginBottom="250px"
       android:layout_marginRight="200px"
        android:background="@drawable/btn_m_puzzlefrag11"
       android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
   </FrameLayout>

   <FrameLayout
       android:id="@+id/E"
       android:layout_width="150px"
       android:layout_height="70px"
       android:layout_alignLeft="@+id/G"
       android:layout_alignBottom="@+id/G"
       android:layout_marginBottom="150px"
       android:layout_marginLeft="80px"
        android:background="@drawable/btn_m_puzzlefrag11"
       android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
   </FrameLayout>

   <FrameLayout
       android:id="@+id/D"
       android:layout_width="150px"
       android:layout_height="70px"
       android:layout_alignBottom="@+id/G"
       android:layout_alignLeft="@+id/G"
       android:layout_marginBottom="250px"
       android:layout_marginLeft="200px"
        android:background="@drawable/btn_m_puzzlefrag11"
       android:alpha="0" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>
   </FrameLayout>

</RelativeLayout>